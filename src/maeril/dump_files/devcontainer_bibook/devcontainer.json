{
	"name": "TeX Live",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"mhutchie.git-graph",
				"tht13.rst-vscode",
				"James-Yu.latex-workshop",
				"bedirt.gpt-token-counter-live",
				"ms-python.debugpy",
				"ms-python.python",
				"GrapeCity.gc-excelviewer",
				"shardulm94.trailing-spaces"
			]
		}
	},
	"runArgs": [
		"-v",
		"/etc/localtime:/etc/localtime:ro",
		"-v",
		"/etc/timezone:/etc/timezone:ro",
		"-v",
		"/tmp/.X11-unix:/tmp/.X11-unix", // Mount the X11 socket
		"-e",
		"DISPLAY=unix$DISPLAY", // Pass the DISPLAY environment variable
		"-e",
		"XAUTHORITY=/tmp/.Xauthority", // Set XAUTHORITY path inside container
		"-v",
		"$HOME/.Xauthority:/tmp/.Xauthority" // Mount Xauthority for authentication
	]
}